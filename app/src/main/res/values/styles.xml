<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FormContainer" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="FormBox" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="FormNav" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="FormLine" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:radius">3dp</item>
    </style>

    <style name="Header1" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/alternativeDarkColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Header2" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/alternativeDarkColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FormOption" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/unclicked_button</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/alternativeDarkColor</item>
    </style>

    <style name="FormButton" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/nav_button</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AddButton" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/nav_button</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="boxCornerRadiusTopStart">64dp</item>
        <item name="boxCornerRadiusTopEnd">64dp</item>
        <item name="boxCornerRadiusBottomStart">64dp</item>
        <item name="boxCornerRadiusBottomEnd">64dp</item>
    </style>

    <style name="Input" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/input_box</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/alternativeDarkColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:paddingStart">24dp</item>
    </style>

    <style name="ActivityIcon" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="ActivityText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/alternativeDarkColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">4dp</item>
    </style>
</resources>