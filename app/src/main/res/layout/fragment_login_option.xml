<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:backgroundTint="@android:color/transparent"
    tools:context=".ui.login.LoginOptionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="690dp"
            android:layout_height="690dp"
            android:layout_gravity="center"
            android:background="@drawable/white_container_1"
            tools:ignore="MissingConstraints">

            <FrameLayout
                android:layout_width="630dp"
                android:layout_height="630dp"
                android:layout_gravity="center"
                android:background="@drawable/white_container_2"
                tools:ignore="MissingConstraints">

                <FrameLayout
                    android:layout_width="570dp"
                    android:layout_height="570dp"
                    android:layout_gravity="center"
                    android:background="@drawable/white_container_3"
                    tools:ignore="MissingConstraints">

                    <FrameLayout
                        android:layout_width="510dp"
                        android:layout_height="510dp"
                        android:layout_gravity="center"
                        android:background="@drawable/white_container_4"
                        tools:ignore="MissingConstraints">

                        <FrameLayout
                            android:layout_width="450dp"
                            android:layout_height="450dp"
                            android:layout_gravity="center"
                            android:background="@drawable/white_container"
                            tools:ignore="MissingConstraints">

                            <LinearLayout
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/textView"
                                    style="@style/LoginTitle"
                                    android:layout_marginTop="16dp"
                                    android:text="@string/welcome_to_planetze" />

                                <Button
                                    android:id="@+id/buttonLoginOption"
                                    style="@style/FormButton"
                                    android:layout_width="200dp"
                                    android:text="@string/login" />

                                <Button
                                    android:id="@+id/buttonRegisterOption"
                                    style="@style/FormButton"
                                    android:layout_width="200dp"
                                    android:text="@string/register" />

                            </LinearLayout>

                        </FrameLayout>
                    </FrameLayout>
                </FrameLayout>
            </FrameLayout>
        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>