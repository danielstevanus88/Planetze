<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/FormContainer">

            <LinearLayout style="@style/FormBox">

                <TextView
                    android:id="@+id/q9"
                    style="@style/Header1"
                    android:text="@string/q9" />

                <View style="@style/FormLine" />

                <TextView
                    style="@style/Header2"
                    android:text="@string/beef" />

                <Button
                    android:id="@+id/q9a_option1"
                    style="@style/FormOption"
                    android:text="@string/daily" />

                <Button
                    android:id="@+id/q9a_option2"
                    style="@style/FormOption"
                    android:text="@string/frequently" />

                <Button
                    android:id="@+id/q9a_option3"
                    style="@style/FormOption"
                    android:text="@string/occasionally" />

                <Button
                    android:id="@+id/q9a_option4"
                    style="@style/FormOption"
                    android:text="@string/never" />

            </LinearLayout>

            <LinearLayout style="@style/FormBox">

                <TextView
                    style="@style/Header2"
                    android:text="@string/pork" />

                <Button
                    android:id="@+id/q9b_option1"
                    style="@style/FormOption"
                    android:text="@string/daily" />

                <Button
                    android:id="@+id/q9b_option2"
                    style="@style/FormOption"
                    android:text="@string/frequently" />

                <Button
                    android:id="@+id/q9b_option3"
                    style="@style/FormOption"
                    android:text="@string/occasionally" />

                <Button
                    android:id="@+id/q9b_option4"
                    style="@style/FormOption"
                    android:text="@string/never" />

            </LinearLayout>

            <LinearLayout style="@style/FormBox">

                <TextView
                    style="@style/Header2"
                    android:text="@string/chicken" />

                <Button
                    android:id="@+id/q9c_option1"
                    style="@style/FormOption"
                    android:text="@string/daily" />

                <Button
                    android:id="@+id/q9c_option2"
                    style="@style/FormOption"
                    android:text="@string/frequently" />

                <Button
                    android:id="@+id/q9c_option3"
                    style="@style/FormOption"
                    android:text="@string/occasionally" />

                <Button
                    android:id="@+id/q9c_option4"
                    style="@style/FormOption"
                    android:text="@string/never" />

            </LinearLayout>

            <LinearLayout style="@style/FormBox">

                <TextView
                    style="@style/Header2"
                    android:text="@string/fish" />

                <Button
                    android:id="@+id/q9d_option1"
                    style="@style/FormOption"
                    android:text="@string/daily" />

                <Button
                    android:id="@+id/q9d_option2"
                    style="@style/FormOption"
                    android:text="@string/frequently" />

                <Button
                    android:id="@+id/q9d_option3"
                    style="@style/FormOption"
                    android:text="@string/occasionally" />

                <Button
                    android:id="@+id/q9d_option4"
                    style="@style/FormOption"
                    android:text="@string/never" />

            </LinearLayout>

            <LinearLayout style="@style/FormNav">

                <Button
                    android:id="@+id/back"
                    style="@style/FormButton"
                    android:text="@string/back" />

                <Button
                    android:id="@+id/next"
                    style="@style/FormButton"
                    android:text="@string/next" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>