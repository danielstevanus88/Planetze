<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".classes.SplashScreenActivity"
   android:background="@color/splashBackgroundColor">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="218dp"
        android:layout_height="87dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/earth_graphic"
        android:layout_width="386dp"
        android:layout_height="351dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/earth_image" />

    <TextView
        android:id="@+id/catchphrase"
        android:layout_width="386dp"
        android:layout_height="154dp"
        android:layout_below="@id/earth_graphic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/mon_bold"
        android:gravity="center"
        android:shadowColor="#d0d9d2"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textAlignment="center"
        android:textColor="#1B1B1E"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/catchphrase"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/quicksand"
        android:textAlignment="center"
        android:textColor="#1B1B1E"
        android:textSize="20sp"
        android:visibility="gone" />

</RelativeLayout>