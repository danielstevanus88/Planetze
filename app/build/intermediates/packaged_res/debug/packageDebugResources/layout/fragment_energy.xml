<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/FormContainer">

            <LinearLayout style="@style/FormBox">

                <TextView
                    android:id="@+id/q14"
                    style="@style/FormQuestion"
                    android:text="@string/q14" />

                <View style="@style/FormLine" />

                <Button
                    android:id="@+id/q14_option1"
                    style="@style/FormOption"
                    android:text="@string/natural_gas" />

                <Button
                    android:id="@+id/q14_option2"
                    style="@style/FormOption"
                    android:text="@string/electricity" />

                <Button
                    android:id="@+id/q14_option3"
                    style="@style/FormOption"
                    android:text="@string/oil" />

                <Button
                    android:id="@+id/q14_option4"
                    style="@style/FormOption"
                    android:text="@string/propane" />

                <Button
                    android:id="@+id/q14_option5"
                    style="@style/FormOption"
                    android:text="@string/wood" />

                <Button
                    android:id="@+id/q14_option6"
                    style="@style/FormOption"
                    android:text="@string/other" />

            </LinearLayout>

            <LinearLayout style="@style/FormBox">

                <TextView
                    android:id="@+id/q15"
                    style="@style/FormQuestion"
                    android:text="@string/q15" />

                <View style="@style/FormLine" />

                <Button
                    android:id="@+id/q15_option1"
                    style="@style/FormOption"
                    android:text="@string/bill1" />

                <Button
                    android:id="@+id/q15_option2"
                    style="@style/FormOption"
                    android:text="@string/bill2" />

                <Button
                    android:id="@+id/q15_option3"
                    style="@style/FormOption"
                    android:text="@string/bill3" />

                <Button
                    android:id="@+id/q15_option4"
                    style="@style/FormOption"
                    android:text="@string/bill4" />

                <Button
                    android:id="@+id/q15_option5"
                    style="@style/FormOption"
                    android:text="@string/bill5" />

            </LinearLayout>

            <LinearLayout style="@style/FormBox">

                <TextView
                    android:id="@+id/q16"
                    style="@style/FormQuestion"
                    android:text="@string/q16" />

                <View style="@style/FormLine" />

                <Button
                    android:id="@+id/q16_option1"
                    style="@style/FormOption"
                    android:text="@string/natural_gas" />

                <Button
                    android:id="@+id/q16_option2"
                    style="@style/FormOption"
                    android:text="@string/electricity" />

                <Button
                    android:id="@+id/q16_option3"
                    style="@style/FormOption"
                    android:text="@string/oil" />

                <Button
                    android:id="@+id/q16_option4"
                    style="@style/FormOption"
                    android:text="@string/propane" />

                <Button
                    android:id="@+id/q16_option5"
                    style="@style/FormOption"
                    android:text="@string/wood" />

                <Button
                    android:id="@+id/q16_option6"
                    style="@style/FormOption"
                    android:text="@string/other" />

            </LinearLayout>

            <LinearLayout style="@style/FormBox">

                <TextView
                    android:id="@+id/q17"
                    style="@style/FormQuestion"
                    android:text="@string/q17" />

                <View style="@style/FormLine" />

                <Button
                    android:id="@+id/q17_option1"
                    style="@style/FormOption"
                    android:text="@string/primarily"/>

                <Button
                    android:id="@+id/q17_option2"
                    style="@style/FormOption"
                    android:text="@string/partially"/>

                <Button
                    android:id="@+id/q17_option3"
                    style="@style/FormOption"
                    android:text="@string/no"/>

            </LinearLayout>

            <LinearLayout style="@style/FormNav">

                <Button
                    android:id="@+id/back"
                    style="@style/FormButton"
                    android:text="@string/back" />

                <Button
                    android:id="@+id/next"
                    style="@style/FormButton"
                    android:text="@string/next" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>